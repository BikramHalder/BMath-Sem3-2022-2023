%% Custom Environemnts

% Theorem
\newenvironment{thm}{
    \begin{theoremBox}
        \begin{theorem}
            }
            {
        \end{theorem}
    \end{theoremBox}
}
% Problem
\newenvironment{problem}{
    \begin{probBox} 
        \begin{prob}
        }{        
        \end{prob}
    \end{probBox}
}

% Lemma
\newenvironment{lem}{
    \begin{lemmaBox}
        \begin{lemmas}
            }{
        \end{lemmas}
    \end{lemmaBox}
}

% Corollary
\newenvironment{corr}{
    \begin{corrBox}
        \begin{corollary}
            }{
        \end{corollary}
    \end{corrBox}
}

% Example
\newenvironment{example}{
    \begin{savenotes}
        \begin{exampleBox}
            \begin{examples}
                }{
            \end{examples}
        \end{exampleBox}
    \end{savenotes}
}

% Counter Example
\newenvironment{cexample}{
    \begin{exampleBox}
        \begin{counterexample}
            }{
        \end{counterexample}
    \end{exampleBox}
}

% Claim
\newenvironment{claim}{
    \begin{clmBox}
        \begin{clm}
            }{
        \end{clm}
    \end{clmBox}
}

% Proposition
\newenvironment{props}{
    \begin{propBox}
        \begin{propn}
            }{
        \end{propn}
    \end{propBox}
}

% Definition
\newenvironment{defn}{
    \begin{defBox} 
        \begin{definition}
        }
        { 
        \end{definition} 
    \end{defBox}
}
